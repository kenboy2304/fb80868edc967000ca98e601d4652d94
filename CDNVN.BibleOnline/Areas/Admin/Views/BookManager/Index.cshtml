@using System.Text.RegularExpressions
@model IEnumerable<CDNVN.BibleOnline.Models.Book>

@{
    ViewBag.Title = "Index";
    var groupBook = new string[] {};
    if (Model != null && Model.Any())
    {
        groupBook=CDNVN.BibleOnline.Models.GroupBook.GetGroupBookForLanguage(Model.First().Bible.Language.Code);
    }
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "BookManager", FormMethod.Get, new { id = "ViewBible" }))
    {
        @Html.DropDownList("v", (SelectList)ViewBag.BibleCode, new { onchange = "this.form.submit()" })
    }
</p>


@for (var t = 1; t <= groupBook.Length; t++)
{
    <h3>@groupBook[t-1]</h3>
    <table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bible.Version)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="width: 25%;">
            @Html.DisplayNameFor(model => model.TotalChapter)
        </th>

        <th></th>
    </tr>
    @foreach (var item in Model.Where(b=>b.Group==t))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bible.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @for (var i = 1; i <= item.TotalChapter; i++)
                {
                     @Html.ActionLink(i.ToString(), "Index", "ContentManager", new { v = item.Bible.Version, ad = item.CodeName + " " + i }, null) <text>,</text> 
                }
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

}

